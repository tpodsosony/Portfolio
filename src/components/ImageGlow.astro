---
import { Image } from 'astro:assets';
import type { LocalImageProps, RemoteImageProps } from 'astro:assets';

type Props = LocalImageProps | RemoteImageProps;

const { ...props } = Astro.props;

const width = props.width;
const height = props.height;
---

<div class="glow-image">
  <Image {...props} />
  <Image
    width={width ? ((typeof width === 'number' ? width : Number.parseInt(width)) / 4) : 16} 
    height={height ? ((typeof height === 'number' ? height : Number.parseInt(height)) / 4) : 16}
    {...props}
    class='glow'
    role='presentation'
  />
</div>
<style>
  .glow-image {
    position: relative;
  }

  .glow-image img {
    position: relative;
    z-index: 1;
    border-radius: .5rem;
  }

  .glow {
    position: absolute !important;
    top: 0;
    left: 0;
    z-index: 0 !important;
    filter: blur(8px);
  }
</style>